@model IEnumerable<Data.Alojamientos>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clase)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroHab)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NroHabOcupadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Plazas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PlazasOcupadas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clase)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroHab)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroHabOcupadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Plazas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlazasOcupadas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reservas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
